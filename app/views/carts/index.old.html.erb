<h1>Списки покупок</h1>

<br>
<h4><%= link_to 'Создать новый список', new_cart_path %></h4>


<br>
<br>
<br>

<table class = "table table-info table-hover border table-striped">
  <thead class="thead-primary">
    <tr>
      <th >Название списка</th>
      <th >Дата создание</th>
      <th >Общая сумма, р.</th>
      <th colspan="3" scope="col"></th>
      
    </tr>
  </thead>

  <tbody>
   
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.name %></td>
        <td><%= cart.updated_at %></td>
        <td><%= cart.count_items %></td>
        <td><%= link_to 'Показать', cart %></td>
        <td><%= link_to 'Изменить', edit_cart_path(cart) %></td>
        <td><%= link_to 'Удалить', cart, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>





